SELECT
oct.driver_id,oct.lpep_pickup_day_of_week,SEP.lpep_pickup_day_of_week,
oct_total,sep_total, oct_total-sep_total AS diffrence
FROM
(SELECT driver_id, lpep_pickup_day_of_week, sum(Total_amount) as sep_total
FROM sep 
GROUP BY driver_id,lpep_pickup_day_of_week) AS OCT
JOIN
(SELECT driver_id, lpep_pickup_day_of_week, sum(Total_amount) as oct_total
FROM oct 
GROUP BY driver_id,lpep_pickup_day_of_week) AS SEP
ON OCT.driver_id=SEP.driver_id
order by 1,2,3
